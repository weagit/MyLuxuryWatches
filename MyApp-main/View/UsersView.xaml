<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MyApp.ViewModel"
             xmlns:model="clr-namespace:MyApp.Model"
             x:Class="MyApp.View.UsersView"
             x:DataType="viewmodel:UsersViewModel"
             Title=""
             BackgroundImageSource="img_background.jpg">

    <ContentPage.Resources>
        <!-- Style pour les titres -->
        <Style x:Key="LuxuryTitleStyle" TargetType="Label">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="TextColor" Value="#000000"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Margin" Value="0,20,0,10"/>
            <Setter Property="FontFamily" Value="Trajan Pro, Didot, Times New Roman"/>
            <Setter Property="CharacterSpacing" Value="1.5"/>
        </Style>

        <!-- Style pour les boutons -->
        <Style x:Key="LuxuryButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#000000" />
            <Setter Property="TextColor" Value="#FFD700" />
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderColor" Value="#FFD700"/>
            <Setter Property="BorderWidth" Value="2"/>
        </Style>

        <!-- Style pour les bordures -->
        <Style x:Key="LuxuryBorderStyle" TargetType="Border">
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Stroke" Value="#FFD700"/>
            <Setter Property="BackgroundColor" Value="#AA000000"/>
        </Style>

        <!-- Style pour les labels -->
        <Style x:Key="LuxuryLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="TextColor" Value="#FFD700"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>

        <!-- Style pour les entry -->
        <Style x:Key="LuxuryEntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="#33FFFFFF"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="PlaceholderColor" Value="#AAFFD700"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Titre de la page -->
        <Label Grid.Row="0" Text="USER MANAGEMENT" Style="{StaticResource LuxuryTitleStyle}">
            <Label.Shadow>
                <Shadow Brush="#FFD700" Offset="1,1" Radius="1" Opacity="0.8"/>
            </Label.Shadow>
        </Label>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" RowDefinitions="*,*" ColumnDefinitions="*,*" Padding="10">
            <!-- Liste des utilisateurs -->
            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource LuxuryBorderStyle}" Margin="5">
                <Grid RowDefinitions="Auto,*">
                    <Label Text="USER LIST" Grid.Row="0" Style="{StaticResource LuxuryLabelStyle}" 
                           FontSize="18" HorizontalOptions="Center" Margin="0,0,0,10"/>

                    <ScrollView Grid.Row="1">
                        <CollectionView ItemsSource="{Binding Users}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:User">
                                    <Grid Padding="5" ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="{Binding Username}" Style="{StaticResource LuxuryLabelStyle}" FontSize="16" FontAttributes="Bold"/>
                                            <Label Text="{Binding FirstName, StringFormat='First Name: {0}'}" Style="{StaticResource LuxuryLabelStyle}"/>
                                            <Label Text="{Binding LastName, StringFormat='Last Name: {0}'}" Style="{StaticResource LuxuryLabelStyle}"/>
                                            <Label Text="{Binding Email, StringFormat='Email: {0}'}" Style="{StaticResource LuxuryLabelStyle}"/>
                                            <Label Text="{Binding IsAdmin, StringFormat='Admin: {0}'}" Style="{StaticResource LuxuryLabelStyle}"/>
                                        </VerticalStackLayout>

                                        <Button Grid.Column="1" Text="Delete" 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:UsersViewModel}}, Path=DeleteUserCommand}" 
                                                CommandParameter="{Binding}" 
                                                Style="{StaticResource LuxuryButtonStyle}"
                                                WidthRequest="100"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </ScrollView>
                </Grid>
            </Border>

            <!-- Ajout d'un utilisateur -->
            <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Style="{StaticResource LuxuryBorderStyle}" Margin="5">
                <Grid RowDefinitions="Auto,*">
                    <Label Text="ADD USER" Grid.Row="0" Style="{StaticResource LuxuryLabelStyle}" 
                           FontSize="18" HorizontalOptions="Center" Margin="0,0,0,10"/>

                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="10" Padding="10">
                            <Label Text="Username" Style="{StaticResource LuxuryLabelStyle}"/>
                            <Entry Text="{Binding Username}" Style="{StaticResource LuxuryEntryStyle}" Placeholder="Username"/>

                            <Label Text="First Name" Style="{StaticResource LuxuryLabelStyle}"/>
                            <Entry Text="{Binding FirstName}" Style="{StaticResource LuxuryEntryStyle}" Placeholder="First Name"/>

                            <Label Text="Last Name" Style="{StaticResource LuxuryLabelStyle}"/>
                            <Entry Text="{Binding LastName}" Style="{StaticResource LuxuryEntryStyle}" Placeholder="Last Name"/>

                            <Label Text="Email" Style="{StaticResource LuxuryLabelStyle}"/>
                            <Entry Text="{Binding Email}" Style="{StaticResource LuxuryEntryStyle}" Placeholder="Email" Keyboard="Email"/>

                            <Label Text="Password" Style="{StaticResource LuxuryLabelStyle}"/>
                            <Entry Text="{Binding Password}" Style="{StaticResource LuxuryEntryStyle}" Placeholder="Password" IsPassword="True"/>

                            <Grid ColumnDefinitions="Auto,*">
                                <CheckBox Grid.Column="0" IsChecked="{Binding IsAdmin}" Color="#FFD700"/>
                                <Label Grid.Column="1" Text="Administrator" Style="{StaticResource LuxuryLabelStyle}" VerticalOptions="Center"/>
                            </Grid>

                            <Button Text="Add User" 
                                    Command="{Binding AddUserCommand}" 
                                    Style="{StaticResource LuxuryButtonStyle}"
                                    HorizontalOptions="Center"
                                    WidthRequest="200"/>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
        </Grid>

        <!-- Bouton refresh -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Margin="0,10,0,20">
            <Button Text="Refresh" Command="{Binding LoadUsersCommand}" Style="{StaticResource LuxuryButtonStyle}" Margin="10"/>
        </StackLayout>
    </Grid>
</ContentPage>
